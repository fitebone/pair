<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp">

    <ImageView
        android:id="@+id/list_info_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_logo"
        />
    <TextView
        android:id="@+id/list_info_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/list_info_icon"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="30dp"
        android:textColor="@color/md_theme_dark_onBackground"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/list_info_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/list_info_label"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/md_theme_dark_onBackground"
        android:textSize="17sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>