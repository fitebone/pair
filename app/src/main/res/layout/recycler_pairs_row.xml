<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/peer_recycler_row"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">
    <ImageView
        android:id="@+id/pairImage1"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_gravity="start"
        android:src="@drawable/ic_camera"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/pairGesture"/>
    <TextView
        android:id="@+id/pairName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        tools:text="Some name"
        app:layout_constraintTop_toBottomOf="@id/pairImage1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/pairGesture"/>
    <ImageView
        android:id="@+id/pairGesture"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_swap"
        android:layout_marginHorizontal="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/pairGestureText"/>
    <TextView
        android:id="@+id/pairGestureText"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        tools:text="Gesture Text"
        app:layout_constraintTop_toTopOf="@id/pairName1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <ImageView
        android:id="@+id/pairImage2"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_gravity="end"
        android:src="@drawable/ic_camera"
        app:layout_constraintStart_toEndOf="@id/pairGesture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/pairName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        tools:text="Some name"
        app:layout_constraintTop_toBottomOf="@id/pairImage2"
        app:layout_constraintStart_toEndOf="@id/pairGesture"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/pairStreak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <View style="@style/Divider"
        android:id="@+id/account_div1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        android:layout_marginTop="20dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>